doctype html
html
  head
    title GameBox
    style.
      .App {
      text-align: center;
      }
      .App-logo {
      animation: App-logo-spin infinite 20s linear;
      height: 7vmin;
      }
      .App-header {
      background-color: #282c34;
      min-height: 10vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: calc(10px + 2vmin);
      color: white;
      }
      @keyframes App-logo-spin {
      from {
      transform: rotate(0deg);
      }
      to {
      transform: rotate(360deg);
      }
      }
    style.
      * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      }
      img-button {
      position: fixed;
      left: 50%;
      bottom: 0px;
      transform: translate(-50%, -50%);
      margin: 0 auto;
      margin-left: 250px;
      }
      body {
      background-color: black;
      font-family: Arial, Helvetica, sans-serif;
      background: url("/background.jpg") no-repeat;
      }
      chat-box {
      font: 13px Helvetica, Arial;
      color: 000582
      }
      form {
      background: #FFBDDB;
      padding: 3px;
      position: fixed;
      bottom: 0;
      width: 20%;
      }
      form input {
      border: 0;
      padding: 10px;
      width: 85%;
      margin-right: .5%;
      }
      form button {
      height: 30px;
      width: 32px;
      background: #093;
      border: none;
      color: white
      }
      #messages {
      list-style-type: none;
      margin: 0;
      margin-top: 0px;
      padding: 0px;
      border: 0px;
      width: 20%;
      z-index: 1;
      background: #D6F6FF;
      }
      #message li {
      padding: 5px 10px;
      width: 20%;
      z-index: 1;
      }
      #messages li:nth-child(odd) {
      background: #F5DFFB;
      }
    style.
      bg-ele {
      background-color: white;
      }
      .rectangle {
      height: 1000px;
      width: 20%;
      position: fixed;
      background-color: white;
      z-index: -1;
      }
  body
    .App
      header.App-header
        img.App-logo(src='/testimage.png', alt='logo')
    chat-box
      ul#messages
      form(action='')
        input#m(autocomplete='off')
        button Send
      script(src='/socket.io/socket.io.js')
      script(src='https://code.jquery.com/jquery-1.12.4.min.js')
      script.
        $(function(){
        var socket = io();
        $('form').submit(function(){
        socket.emit('chat', $("#m").val());
        $("#m").val('');
        return false;
        });
        socket.on('chat', function(msg){
        $("#messages").append($("<li>").text(msg));
        });
        })
    bg-ele
      .rectangle
    div
      form(method='POST', action='/game')
      img-button
        a(href='/select')
          img(type="image" src='home_button.png' width="16%")
        a(href='/continue')
          img(type="image" src='goback_button.png' width="16%")
